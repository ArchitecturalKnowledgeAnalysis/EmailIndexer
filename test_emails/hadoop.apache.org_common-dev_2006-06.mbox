	        System.out.println("Jobs in success state: " + theControl.getSuccessfulJobs().size());
	        System.out.println("Jobs in failed state: " + theControl.getFailedJobs().size());
	        System.out.println("\n");
			
	        try {
	                Thread.sleep(60000);
	        } catch (Exception e) {
				
	        }
	}
	theControl.stop();



